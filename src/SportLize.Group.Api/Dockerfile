#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["src/SportLize.Group.Api/SportLize.Group.Api.csproj", "src/SportLize.Group.Api/"]
RUN dotnet restore "src/SportLize.Group.Api/SportLize.Group.Api.csproj"
COPY . .
WORKDIR "/src/src/SportLize.Group.Api"
RUN dotnet build "SportLize.Group.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "SportLize.Group.Api.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SportLize.Group.Api.dll"]
